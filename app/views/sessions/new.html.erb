<%= render 'pages/navbar' %>

<div class="container my-5">
<% flash.each do |key, message| %>
    <div class="alert alert-<%= key == 'notice' ? 'success' : 'danger' %> alert-dismissible fade show" role="alert">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
  <h1 class="text-center mb-4">Log in to flight owner account</h1>
  

  <%= form_with scope: :session, url: login_path, local: true, class: 'needs-validation' do |f| %>
    <div class="mb-3">
      
    </div>

    <div class="mb-3">
      <%= f.label :email, class: 'form-label' %>
      <%= f.text_field :email, class: 'form-control', placeholder: 'Enter your email' %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, class: 'form-control', placeholder: 'Enter your password' %>
    </div>

    <div class="text-center">
      <%= f.submit 'Log in', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>