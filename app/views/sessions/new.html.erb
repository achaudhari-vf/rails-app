<%= render 'pages/navbar' %>

<div class="container w-full vh-100 d-flex flex-column justify-content-center align-items-center">
  <% flash.each do |key, message| %>
      <div class="mx-auto col-6 alert alert-<%= key == 'notice' ? 'success' : 'danger' %> alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
  <% end %>
  <h1 class="text-center mb-4">Log in to flight owner account</h1>
    

  <%= form_with scope: :session, url: login_path, local: true, class: 'needs-validation' do |f| %>
      

    <div class=" col-3 shadow p-3 mb-5 bg-body rounded w-100">
      <%= f.label :email, class: 'form-label' %>
      <%= f.text_field :email, class: 'form-control', placeholder: 'Enter your email' %>
    
      
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, class: 'form-control', placeholder: 'Enter your password' %>

      <%= f.submit 'Log in', class: 'btn btn-primary mx-auto mt-3' %>
    </div>
  <% end %>
</div>