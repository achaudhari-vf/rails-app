<%= render 'layouts/navigation' %>

<h1>All Flights</h1>


<%= button_to 'ADD Flight', new_flight_path , method: :get %>
<% @flights.each do |flight| %>
<div class="row justify-content-md-center">
<div class="col-8">
    <div class="card text-center shadow-lg p-3 mb-5 bg-body rounded">
    <div class="card-header">
        by <%= flight.user.name if flight.user%>
    </div>
    <div class="card-body">
        <h5 class="card-title">Flight Details</h5>
        <p class="card-text">From : <%= flight.source %></p>
        <p class="card-text">To : <%= flight.destination %></p>
        <a href="#" class="btn btn-primary">Book Now</a>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button class="btn btn-primary me-md-2" type="button">Delete</button>
            <button class="btn btn-primary" type="button">Edit</button>
        </div>
    </div>
    </div>
    </div>
  <% end %>
  <div class="card-footer text-muted">
    2 days ago
  </div>
</div>

<table class="table table-dark table-striped-columns">
    <thead>
        <tr>
            <th>Source</th>
            <th>Destination</th>
            <th>Price</th>
            <th>Depart_date</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        <% @flights.each do |flight| %>
            <tr>
                <td><%= flight.source %></td>
                <td><%= flight.destination %></td>
                <td><%= flight.price %></td>
                <td><%= flight.depart_date %></td>
                <td>
                    <%= button_to 'Edit', edit_flight_path(flight), method: :get %>
                    <%= button_to 'delete', flight_path(flight), method: :delete %>



                
                </td>
                </tr>
        <% end %>
    </tbody>
</table>
