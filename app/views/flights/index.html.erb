<h1>All Flights</h1>

<table class="table table-dark table-striped-columns">
    <thead>
        <tr>
            <th>Source</th>
            <th>Destination</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        <% @flights.each do |flight| %>
            <tr>
                <td><%= flight.source %></td>
                <td><%= flight.destination %></td>
                <td><%= flight.price %></td>
            </tr>
        <% end %>
    </tbody>
</table>
