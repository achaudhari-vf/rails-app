<%= render 'pages/navbar' %>

<div class="container my-5">
  <h1 class="text-center">Create New Flight Data</h1>

  <% if @flight.errors.any? %>
    <div class="alert alert-danger">
      <h4>The following errors prevented the flight from being saved:</h4>
      <ul>
        <% @flight.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with scope: :flights, url: flights_path, local: true, class: 'mt-4' do |f| %>
    <div class="mb-3">
      <%= f.label :source, class: 'form-label' %>
      <%= f.text_field :source, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :destination, class: 'form-label' %>
      <%= f.text_field :destination, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :price, class: 'form-label' %>
      <%= f.number_field :price, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :depart_date, 'Date', class: 'form-label' %>
      <%= f.date_field :depart_date, class: 'form-control' %>
    </div>

    <div class="text-center">
      <%= f.submit 'Save', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
